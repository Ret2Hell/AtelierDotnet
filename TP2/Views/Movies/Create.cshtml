@model TP2.Models.Movie

@{
ViewBag.Title = "Create Movie";
}

<h2>Create Movie</h2>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GenreId">Genre</label>
        <select asp-for="GenreId" class="form-control" asp-items="@(new SelectList(ViewBag.Genres, "Id", "Name"))"></select>
    </div>

    <div class="form-group">
        <label asp-for="AddedDate"></label>
        <input asp-for="AddedDate" class="form-control" type="date" readonly="readonly" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
        <span asp-validation-for="AddedDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Photo">Photo</label>
        <input asp-for="Photo" class="form-control" type="file" />
        <span asp-validation-for="Photo" class="text-danger"></span>
    </div>

    <button type="submit" class="mt-2 btn btn-primary">Save</button>
</form>
<a asp-action="Index" class="mt-2 btn btn-secondary">Back to List</a>
