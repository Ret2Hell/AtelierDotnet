@model IEnumerable<TP2.Models.Movie>

<h2>Movies</h2>
<a asp-action="Create" class="btn btn-primary">Create New Movie</a>
<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Genre</th>
        <th>Added Date</th>
        <th>Photo</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var movie in Model)
    {
        <tr>
            <td>@movie.Name</td>
            <td>@movie.Genre?.Name</td>
            <td>@movie.AddedDate.ToString("yyyy-MM-dd")</td>
            <td><img src="@movie.Photo" alt="Movie Photo" style="width:50px; height:auto;" /></td>
            <td>
                <a asp-action="Edit" asp-route-id="@movie.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@movie.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>