@model TP2.Models.Customer

@{
ViewBag.Title = "Edit Customer";
}

<h2>Edit Customer</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="MembershipTypeId">Membership Type</label>
        <select asp-for="MembershipTypeId" class="form-control" asp-items="@(new SelectList(ViewBag.MembershipTypes, "Id", "SignUpFee"))">
            <option value="">-- Select Membership Type --</option>
        </select>
    </div>

    <button type="submit" class="mt-2 btn btn-primary">Save</button>
</form>

<a asp-action="Index" class="mt-2 btn btn-secondary">Cancel</a>

