@model IEnumerable<TP2.Models.Customer>

<h2>Customers</h2>
<a asp-action="Create" class="btn btn-primary">Create New Customer</a>
<table class="table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Discount Rate</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var customer in Model)
    {
        <tr>
            <td>@customer.Name</td>
            <td>@customer.MembershipType?.DiscountRate</td>
            <td>
                <a asp-action="Edit" asp-route-id="@customer.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@customer.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@customer.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>